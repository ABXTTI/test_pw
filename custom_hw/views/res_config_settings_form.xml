<odoo>
	<record id="res_config_settings_inherit_workorder_default" model="ir.ui.view">
  		<field name="name">res.config.settings.inherit.workorder.default</field>
  		<field name="model">res.settings.mrp.custom</field>
  		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="issue_number_granulation"/>
							<field name="date_of_issue_granulation"/>
							<field name="revision_no_granulation"/>
							<field name="issue_number_compression"/>
							<field name="date_of_issue_compression"/>
							<field name="revision_no_compression"/>
						</group>
					</group>
				</sheet>
    		</form>
  		</field>
	</record>

	<record id="action_res_settings_mrp_custom" model="ir.actions.act_window">
	   <field name="name">Settings Mrp Custom</field>
	   <field name="res_model">res.settings.mrp.custom</field>
	   <field name="view_mode">form</field>
	   <field name="context">{}</field>
		<field name="domain">[]</field>
<!--	   <field name="domain">[('transaction_with', '=', 'vendor')]</field>-->
<!--	   <field name="view_id" ref="customer_details_tree"/>-->
	   <field name="help" type="html">
		   <p class="o_view_nocontent_smiling_face">
		   </p>
	   </field>
	</record>


	<menuitem id="menu_settings_custom"
	 name="Settings Custom"
	 parent="mrp.menu_mrp_configuration"
	 action="action_res_settings_mrp_custom"
	 sequence="100"/>
</odoo>